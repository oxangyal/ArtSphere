<header class="relative">

  <div class="absolute inset-0">
    <%= image_tag "artistic.jpg", class: "w-full h-40 object-cover" %>
  </div>

  <div class="relative z-10 flex-grow flex items-center justify-center text-center text-white">
    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold font-mag">Art Sphere</h1>
  </div>

  <nav class="relative z-10 bg-black shadow-md mt-6">
    <div class="container mx-auto px-6 py-4 flex flex-wrap justify-between items-center">

      <div class="flex items-center space-x-4">
        <%= image_tag("picture.png", class: "w-8 object-cover") %>
        <%= link_to 'Gallery', root_path, class: 'text-gray-100 hover:text-gray-600 font-medium' %>
        <% content_for :title, "Products" %>
      </div>

      <div class="flex items-center space-x-4 flex-wrap">
        <% if current_admin %>
          <%= link_to "Admin dashboard", admin_path, class: 'bg-green-500 text-white py-2 px-2 sm:px-4 rounded hover:bg-green-600' %>
          <%= link_to "Logout as Admin", destroy_admin_session_path, data: { turbo_method: :delete }, class: 'bg-red-400 text-white py-2 px-2 sm:px-4 rounded hover:bg-red-500' %>
        <% elsif current_user %>
          <%= link_to "My favorites", favorites_path, class: 'bg-purple-500 text-white py-2 px-2 sm:px-4 rounded hover:bg-purple-600' %>
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: 'bg-red-400 text-white py-2 px-2 sm:px-4 rounded hover:bg-red-500' %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: 'bg-blue-500 text-white py-2 px-2 sm:px-4 rounded hover:bg-blue-600' %>
        <% end %>

      </div>
    </div>
  </nav>
</header>
