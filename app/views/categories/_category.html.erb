<%= link_to category do %>
  <div id="<%= dom_id category %>" class="relative flex items-center justify-center">
  <%= image_tag category.images.first, class:"w-full h-60 object-cover rounded-lg hover:brightness-75 transition:all duration:250 mt-4" if category.images.attached?  %> 
  
  <p class="text-2xl font-bold text-gray-100 absolute">
    <%= category.name %>
  </p>

  <p class="my-5">
    <%= category.description %>
  </p>

</div>
<% end %>